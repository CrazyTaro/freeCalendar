<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--节日相关的设置,可多个设置同时使用-->
    <attr name="ctCldFestivalFlag">
        <flag name="showSolarTermFirst" value="64" />
        <flag name="showSolarFirst" value="32" />
        <flag name="showLunarFirst" value="16" />
        <flag name="solarTermShow" value="8" />
        <flag name="lunarShow" value="4" />
        <flag name="solarShow" value="2" />
        <flag name="festivalShow" value="1" />
    </attr>

    <!--日历相关的设置,可多个设置同时使用-->
    <attr name="ctCldCalendarFlag">
        <flag name="scrollNoAnimation" value="8192" />
        <flag name="dateInCenter" value="4096" />
        <flag name="scrollVertical" value="2048" />
        <flag name="scrollHorizontal" value="1024" />
        <flag name="scrollEnable" value="512" />
        <flag name="weekTitleChinese" value="256" />
        <flag name="weekTitleHeightFix" value="128" />
        <flag name="weekTitleShow" value="64" />
        <flag name="minorFestivalColor" value="32" />
        <flag name="minorWeekendColor" value="16" />
        <flag name="lunarDateShow" value="8" />
        <flag name="nextMonthShow" value="4" />
        <flag name="previousMonthShow" value="2" />
    </attr>

    <!--是否优先显示节气-->
    <attr name="ctCldFestivalShowSolarTermFirst" format="boolean" />
    <!--是否优先显示公历节日-->
    <attr name="ctCldFestivalShowSolarFirst" format="boolean" />
    <!--是否优先显示农历节日-->
    <attr name="ctCldFestivalShowLunarFirst" format="boolean" />
    <!--是否显示节气-->
    <attr name="ctCldFestivalSolarTermShow" format="boolean" />
    <!--是否显示农历节日-->
    <attr name="ctCldFestivalLunarShow" format="boolean" />
    <!--是否显示公历节日-->
    <attr name="ctCldFestivalSolarShow" format="boolean" />
    <!--是否显示节日-->
    <attr name="ctCldFestivalShow" format="boolean" />

    <!--是否启用上下滑动切换日历-->
    <attr name="ctCldCalendarScrollVertical" format="boolean" />
    <!--是否启用左右滑动切换日历-->
    <attr name="ctCldCalendarScrollHorizontal" format="boolean" />
    <!--是否启用滑动切换日历功能-->
    <attr name="ctCldCalendarScrollEnable" format="boolean" />
    <!--是否周期标题使用中文-->
    <attr name="ctCldCalendarWeekTitleChinese" format="boolean" />
    <!--是否使用固定周期标题高度-->
    <attr name="ctCldCalendarWeekTitleHeightFix" format="boolean" />
    <!--是否显示星期标题-->
    <attr name="ctCldCalendarWeekTitleShow" format="boolean" />
    <!--次要月份节日颜色是否使用次要颜色-->
    <attr name="ctCldCalendarMinorFestivalColor" format="boolean" />
    <!--次要月份周末颜色是否使用次要颜色-->
    <attr name="ctCldCalendarMinorWeekendColor" format="boolean" />
    <!--是否显示农历日期-->
    <attr name="ctCldCalendarLunarDateShow" format="boolean" />
    <!--是否显示下个月日期-->
    <attr name="ctCldCalendarNextMonthShow" format="boolean" />
    <!--是否显示上个月日期-->
    <attr name="ctCldCalendarPreMonthShow" format="boolean" />
    <!--是否居中显示日期-->
    <attr name="ctCldCalendarDateInCenter" format="boolean" />
    <!--是否滑动切换不使用动画-->
    <attr name="ctCldCalendarScrollNoAnimation" format="boolean" />

    <!--设置一周开始时间-->
    <attr name="ctCldStartWeekDay" format="enum">
        <enum name="sunday" value="1" />
        <enum name="monday" value="2" />
        <enum name="tuesday" value="3" />
        <enum name="wednesday" value="4" />
        <enum name="thursday" value="5" />
        <enum name="friday" value="6" />
        <enum name="saturday" value="7" />
    </attr>

    <!--设置选中日期-->
    <attr name="ctCldSelectedDay" format="integer" />
    <!--设置底部的Drawable-->
    <attr name="ctCldBottomDrawable" format="reference" />
    <!--设置节日提醒小图标-->
    <attr name="ctCldFestivalDrawable" format="reference" />
    <!--设置调休工作日提醒小图标-->
    <attr name="ctCldWorkDrawable" format="reference" />
    <!--设置初始化的年份-->
    <attr name="ctCldInitYear" format="integer" />
    <!--设置初始化的月份-->
    <attr name="ctCldInitMonth" format="integer" />
    <!--设置初始化的日期-->
    <attr name="ctCldInitDay" format="integer" />
    <!--设置星期标题的固定高度-->
    <attr name="ctCldWeekTitleFixHeight" format="dimension|integer" />
    <!--设置横向滑动切换界面距离比-->
    <attr name="ctCldHorizontalScrollRate" format="float" />
    <!--设置垂直滑动切换界面距离比-->
    <attr name="ctCldVerticalScrollRate" format="float" />

    <!--设置日历背景色-->
    <attr name="ctCldBackgroundColor" format="color" />
    <!--设置每个日期的背景色-->
    <attr name="ctCldDateBackgroundColor" format="color" />
    <!--设置默认的字体文本颜色-->
    <attr name="ctCldDefaultTextColor" format="color" />
    <!--设置次要的字体文本颜色-->
    <attr name="ctCldMinorTextColor" format="color" />
    <!--设置周末字体颜色-->
    <attr name="ctCldWeekendTextColor" format="color" />
    <!--设置节日字体颜色-->
    <attr name="ctCldFestivalTextColor" format="color" />
    <!--设置选中日期字体颜色-->
    <attr name="ctCldSelectedDayTextColor" format="color" />
    <!--设置今天字体颜色-->
    <attr name="ctCldTodayDayTextColor" format="color" />
    <!--设置选中日期背景色-->
    <attr name="ctCldSelectedBackgroundColor" format="color" />
    <!--设置今天背景色-->
    <attr name="ctCldTodayBackgroundColor" format="color" />

    <declare-styleable name="AbsCalendarView">
        <attr name="ctCldFestivalFlag" />
        <attr name="ctCldCalendarFlag" />
        <attr name="ctCldFestivalShowSolarTermFirst" />
        <attr name="ctCldFestivalShowSolarFirst" />
        <attr name="ctCldFestivalShowLunarFirst" />
        <attr name="ctCldFestivalSolarTermShow" />
        <attr name="ctCldFestivalLunarShow" />
        <attr name="ctCldFestivalSolarShow" />
        <attr name="ctCldFestivalShow" />

        <attr name="ctCldCalendarScrollVertical" />
        <attr name="ctCldCalendarScrollHorizontal" />
        <attr name="ctCldCalendarScrollEnable" />
        <attr name="ctCldCalendarWeekTitleChinese" />
        <attr name="ctCldCalendarWeekTitleHeightFix" />
        <attr name="ctCldCalendarWeekTitleShow" />
        <attr name="ctCldCalendarMinorFestivalColor" />
        <attr name="ctCldCalendarMinorWeekendColor" />
        <attr name="ctCldCalendarLunarDateShow" />
        <attr name="ctCldCalendarNextMonthShow" />
        <attr name="ctCldCalendarPreMonthShow" />
        <attr name="ctCldCalendarDateInCenter" />
        <attr name="ctCldCalendarScrollNoAnimation" />

        <attr name="ctCldStartWeekDay" />
        <attr name="ctCldSelectedDay" />
        <attr name="ctCldBottomDrawable" />
        <attr name="ctCldFestivalDrawable" />
        <attr name="ctCldWorkDrawable" />
        <attr name="ctCldInitYear" />
        <attr name="ctCldInitMonth" />
        <attr name="ctCldInitDay" />
        <attr name="ctCldWeekTitleFixHeight" />
        <attr name="ctCldHorizontalScrollRate" />
        <attr name="ctCldVerticalScrollRate" />

        <attr name="ctCldBackgroundColor" />
        <attr name="ctCldDateBackgroundColor" />
        <attr name="ctCldDefaultTextColor" />
        <attr name="ctCldMinorTextColor" />
        <attr name="ctCldWeekendTextColor" />
        <attr name="ctCldFestivalTextColor" />
        <attr name="ctCldSelectedDayTextColor" />
        <attr name="ctCldTodayDayTextColor" />
        <attr name="ctCldSelectedBackgroundColor" />
        <attr name="ctCldTodayBackgroundColor" />
    </declare-styleable>
</resources>